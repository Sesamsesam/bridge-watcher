{
  "name": "bridge-watcher",
  "version": "0.1.0",
  "description": "Production-grade orchestration engine connecting Antigravity (planner) to OpenCode (executor) with Docker-based sandboxing",
  "type": "module",
  "bin": {
    "bridge": "./src/cli.ts"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build src/cli.ts --outdir=dist --target=bun",
    "harness": "bun run src/cli.ts harness",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "bun-types": "^1.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sesamsesam/bridge-watcher.git"
  }
}
